font-0           = Roboto Mono:size=10:weight=bold:antialias=true;0


; ---------- modules ---------------

[module/workspace]
type              = custom/script
interval          = 0.01
exec              = echo $(( $(xprop -root _NET_CURRENT_DESKTOP | sed -e 's/_NET_CURRENT_DESKTOP(CARDINAL) = //') + 1))
format-padding    = 2
format-font       = 1

[module/time]
type                     = custom/script
interval                 = 1.0
exec                     = bash /home/nerdypepper/scripts/time.sh
format-prefix-foreground = ${colors.green}
format-padding           = 1
format-foreground        = ${colors.foreground}
format-background        = ${colors.background}

[module/music_pop]
type              = custom/script
format-text       = <label>
label             = 
interval          = 1.0
exec              = echo label
click-left        = /home/nerdypepper/scripts/hidebars.sh -s
click-right       = /home/nerdypepper/scripts/hidebars.sh -h
format-padding    = 1
format-foreground = ${colors.foreground}
format-background = ${colors.background}
 
[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = cmus-remote -r -p && ~/scripts/popups/cover.sh
click-right       = wmctrl -s 5
format-foreground = ${colors.green}
format-background = ${colors.background}
format-padding    = 1

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = cmus-remote -n -p && ~/scripts/popups/cover.sh
click-right       = wmctrl -s 5
format-foreground = ${colors.green}
format-background = ${colors.background}
format-padding    = 1

[module/playpause]
type              = custom/script
exec              = exec ~/scripts/playpause.sh
click-left        = cmus-remote -u
click-right       = wmctrl -s 5
interval          = 1
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.green}
format-background = ${colors.background}
format-padding    = 1

[module/2bws]
type              = custom/script
exec              = bash ~/scripts/2bws.sh
interval          = 0.01
format-padding    = 3
format-foreground = ${colors.background}
scroll-up         = exec ~/scripts/wscycle.sh -f
scroll-down       = exec ~/scripts/wscycle.sh -r

[module/bat]
type                     = custom/script
exec                     = ~/scripts/bat -i
interval                 = 100
format-padding           = 2
format-background        = ${colors.background}
format-foreground        = ${colors.foreground}

[module/vol]
type                     = custom/script
exec                     = ~/scripts/vol -q
interval                 = 0.01
format-padding           = 2
scroll-up                = ~/scripts/vol -i
scroll-down              = ~/scripts/vol -d

[module/net]
type              = custom/script
exec              = exec ~/scripts/netwrk.sh
interval          = 5
format-padding    = 2
format-background = ${colors.foreground}
click-left        = urxvtc -g 50x22 -b 0 -e nmtui

[module/album]
type              = custom/script
exec              = ~/scripts/music.sh -b
interval          = 2
format-padding    = 2
click-left        = cmus-remote -u
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-

[module/artist]
type              = custom/script
exec              = ~/scripts/music.sh -a
interval          = 2
format-padding    = 2
click-left        = cmus-remote -u
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-

[module/track]
type              = custom/script
exec              = ~/scripts/music.sh -t
interval          = 2
format-padding    = 2
click-left        = cmus-remote -u
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-

[module/cmusnp]
type              = custom/script
interval          = 0.1
format-text       = <label>
exec              = bash ~/scripts/cmusnp.sh
click-left        = cmus-remote -u
click-right       = wmctrl -s 5
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.foreground}
format-background = ${colors.background}
padding           = 2

[module/brit]
type                     = custom/script
exec                     = echo "$( light -b | sed 's/\..*//' )%"
scroll-up                = exec light -A 3
scroll-down              = exec light -U 3
click-left               = redshift -O 4000
click-right              = redshift -O 6500
format-foreground        = ${colors.foreground
format-padding           = 2
interval                 = 0.01

[module/separator]
type              = custom/script
format-text       = <label>
label             = "/"
exec              = echo label
format-foreground = ${colors.foreground_bright}
