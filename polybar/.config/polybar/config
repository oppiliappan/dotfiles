; ---------- global --------------

[colors]
foreground        = ${xrdb:color7}
foreground_bright = ${xrdb:color8}
background        = ${xrdb:color0}
modb              = ${xrdb:color0}
modb1             = ${xrdb:color0}
modb2             = ${xrdb:color0}
red     = ${xrdb:color1}
orange  = ${xrdb:color9}
yellow  = ${xrdb:color3}
green   = ${xrdb:color2}
cyan    = ${xrdb:color6}
blue    = ${xrdb:color4}
magenta = ${xrdb:color5}
brown   = ${xrdb:color7}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true


; ------------ bars ---------------

[bar/bot]
width    = 100%
height   = 50
offset-x = 0%
offset-y = 1035

locale     = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Iosevka Term:size=11:antialias=true;0
font-1 = icomoon:size=16:antialias=true;1

modules-left   = bat vol brit 
modules-center = 2bws 
modules-right  = time blth net

tray-position    =

radius-top = 0

spacing             = 1
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0

; ---------- modules ---------------

[module/plus]
type           = custom/script
interval       = 0.01
exec           = echo $(( $(xprop -root _NET_CURRENT_DESKTOP | sed -e 's/_NET_CURRENT_DESKTOP(CARDINAL) = //') + 1))
click-left     = ~/scripts/hidebars.sh -s
click-right    = ~/scripts/hidebars.sh -h
scroll-up      = ~/scripts/wscycle.sh -f
scroll-down    = ~/scripts/wscycle.sh -r
format-padding = 3

[module/date]
type = custom/script
interval = 1.0
exec = ~/scripts/date.sh
format-padding = 2
format-foreground = ${colors.foreground}

[module/time]
type              = custom/script
interval          = 1.0
exec              = date +%I:%M
format-padding    = 2
format-foreground = ${colors.foreground}

 
[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = cmus-remote -r -p && ~/scripts/popups/cover.sh
click-right       = wmctrl -s 5
format-foreground = ${colors.green}
format-padding    = 2

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = cmus-remote -n -p && ~/scripts/popups/cover.sh
click-right       = wmctrl -s 5
format-foreground = ${colors.green}
format-padding    = 2

[module/playpause]
type              = custom/script
exec              = ~/scripts/playpause.sh
interval          = 0.4
click-left        = cmus-remote -u
click-right       = wmctrl -s 5
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.green}
format-padding    = 2

[module/2bws]
type              = custom/script
exec              = exec ~/scripts/2bws.sh
interval          = 0.01
format-padding    = 3
scroll-up         = exec ~/scripts/wscycle.sh -f
scroll-down       = exec ~/scripts/wscycle.sh -r

[module/bat]
type              = custom/script
exec              = cat /sys/class/power_supply/BAT0/capacity
interval          = 10
format-prefix     = " "
format-suffix     = "%"
format-padding    = 2

[module/vol]
type              = custom/script
exec              = exec ~/scripts/vol -q
interval          = 0.1
format-prefix     = " "
format-padding    = 2
scroll-up         = ~/scripts/vol -i
scroll-down       = ~/scripts/vol -d

[module/net]
type              = custom/script
exec              = exec ~/scripts/netwrk.sh
interval          = 5
format-padding    = 1
click-left        = urxvtc -g 50x22 -b 0 -e nmtui


[module/blth]
type              = custom/script
exec              = exec ~/scripts/bluetooth.sh
interval          = 5
format-padding    = 1

[module/cmusnp]
type              = custom/script
interval          = 0.1
format-text       = <label>
exec              = ~/scripts/cmusnp.sh
click-left        = cmus-remote -u
click-right       = wmctrl -s 5
scroll-up         = exec amixer sset Master 2%+
scroll-down       = exec amixer sset Master 2%-
format-foreground = ${colors.foreground}

[module/brit]
type              = custom/script
exec              = light -b
interval          = 1
format-padding    = 2
format-prefix     = " "
scroll-up         = light -A 5
scroll-down       = light -U 5
click-left = redshift -O 4000
click-right = redshift -O 6500
