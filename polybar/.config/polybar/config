[bar/ws]
width            = 70
height           = 50
offset-x         = 20
offset-y         = 1010
locale           = de_DE.UTF-8
background       = ${colors.background}
foreground       = ${colors.foreground}
modules-left     = 
modules-center   = workspace
modules-right    = 
padding          = 3
